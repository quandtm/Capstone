<common:LayoutAwarePage
    x:Class="Capstone.Editor.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:Capstone.Editor.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Style="{StaticResource LayoutRootStyle}">
        <TextBlock HorizontalAlignment="Left" Margin="100,60,0,0" TextWrapping="Wrap" Text="Capstone Prototype" VerticalAlignment="Top" Style="{StaticResource PageHeaderTextStyle}"/>
        <Button Click="OpenGame" Margin="160,160,0,0" VerticalAlignment="Top" Content="Play Map" Template="{StaticResource MainMenuButton}" Width="160"/>
        <Button Content="New Map" HorizontalAlignment="Left" Margin="160,220,0,0" VerticalAlignment="Top" Click="NewMap" Template="{StaticResource MainMenuButton}" Width="160"/>
        <Button Content="Edit Map" HorizontalAlignment="Left" Margin="160,280,0,0" VerticalAlignment="Top" Click="LoadMap" Template="{StaticResource MainMenuButton}" Width="160"/>
    </Grid>
    
</common:LayoutAwarePage>
